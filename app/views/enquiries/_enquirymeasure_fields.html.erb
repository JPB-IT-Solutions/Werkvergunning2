<fieldset>
  <%# f.label was em.label %>
  <%= f.label :maatregel %>
  <%= f.collection_select(:measurement_id, Measurement.all, :id, :measurement, {prompt: true}, {:multiple => true} ) %>
  <br>

  <%= f.label :Verantwoordelijke %>
  <%= f.text_field :responsible %>
  <br>
  <%= f.label :nodig %>
  <%= f.check_box :needed %>
  <%= f.label :gereed %>
  <%= f.check_box :done %>
  <br>
  <%= f.collection_select(:measurement_id, Measurement.all.sort_by { |m|m.measurementtype}, :id, :type_and_measurement, {:prompt => 'Type | Maatregel'}, class: 'ui search dropdown' ) %>


  <%= f.hidden_field :_destroy %>

  <%= link_to "Verwijder deze maatregel", '#', class: "remove_fields" %>
</fieldset>