
<div id='panel-wrapper'>
  <div id='panel-header' class='text-center'>
    <span class='panel-title'>JPB Werkvergunningen</span>
  </div>
  <div id='panel-body'>
    <div class='row'>
      <div class='col-md-12'>

<p id="notice"><%= notice %></p>

<div id="main-container" class="container-fluid">
  <div class="row">

    <div id="content" class="col-xs-9">

<p>Geregistreerde gebruikers</p>

      <%= grid(@users_grid, show_filters: :always) do |g|

        g.column name: 'ID', attribute: 'id' , auto_reload: true do |user|
          user.id
        end

        g.column name: 'Naam', attribute: 'name', auto_reload: true do |user|
          user.name
        end


        g.column name: 'Email', attribute: 'email', auto_reload: true do |user|
          user.email
        end

        g.column name: 'Rol', attribute: 'name', assoc: :role, auto_reload: true do |user|
          user.role.name
        end


        g.column do |user|

          link_to 'Edit', edit_user_path(user), class: 'btn btn-info btn-xs'
        end
        g.column do |user|
          link_to 'Show', user, class: 'btn btn-primary btn-xs'
        end
        g.column do |user|
          link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'
        end
      end %>
      <%= link_to 'Rollen', roles_path, class: 'btn btn-success' %><br>
      <%= link_to 'Nieuwe gebruiker', new_user_path, class: 'btn btn-success' %><br>
    </div>
  </div>
</div>
<br>
      </div>
    </div>
  </div>
</div>


